<%= render 'layouts/header' %>
<div class="container">
  <div class="row justify-content-center">
  <h2 class="contact">お問い合わせフォーム</h2>
  </div>

    <%= form_with model: @inquiry, local:true do |f| %>


      <div class="form-group">
      <%= f.label :name, 'お名前' %>
      <%= f.text_field :name, autofocus: true,placeholder: "例：山田太郎", class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true,placeholder: "xxxxx@example.com", class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :message, 'メッセージ' %>
      <%= f.text_area :message, size: '10x10',placeholder: "内容を入力してください", class: 'form-control' %>
      </div>

    <!--<div>-->
    <!--<div>-->
    <div class="row justify-content-center">
    <%= f.submit '  送信  ', class: "btn btn-sm btn-primary" %>
  </div>
    <!--</div>-->
    <!--</div>-->
    <% end %>
    <%= link_to :back do %><div style="color: black;">
  <i class="fas fa-undo-alt">戻る</i></div>
<% end %>
