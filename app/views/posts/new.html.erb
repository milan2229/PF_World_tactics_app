<h1>戦術投稿する</h1>
<%= flash[:al] %>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @post, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>戦術</h4>
  <%= f.text_area :body, size: "100x20" %>
  <%= f.submit '投稿' %>
<% end %>