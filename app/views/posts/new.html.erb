<div class="container">
  <div class="row justify-content-center">
    <h1 style="padding-top: 20px;">戦術を投稿する</h1>
  </div>

<%= form_with model: @post, local:true do |f| %>
<div class="form-group">
  <h4>タイトル</h4>
    <%= f.text_field :title, placeholder: "タイトルを入力してください", class: "form-control" %>
</div>
<div class="form-group">
  <h4>戦術</h4>
  <%= f.text_area :body, size: "80x10",placeholder: "内容を入力してください", class: "form-control" %>
</div>
<div class="row justify-content-center">
  <%= f.submit '  投稿  ', class: "btn btn-sm btn-primary" %>
</div>
<% end %>
<%= link_to :back do %><div style="color: black;">
  <i class="fas fa-undo-alt">戻る</i></div>
<% end %>
</div>
