<div class="post-body">
  <p>ユーザーネーム：<%= @post.user.name %>
  <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>タイトル：<%= @post.title %></p>
  <p>戦術：<%= @post.body %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post), class: "btn btn-sm btn-success" %>
  <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-sm btn-danger" %>
  <% end %>
</div>

<% if @post.favorited_by?(current_user)%>
<p>
  <%= link_to post_favorites_path(@post), method: :delete do %>
  ♥<%= @post.favorites.count %>いいね
<% end %>
</p>
<% else %>
<p>
  <%= link_to post_favorites_path(@post), method: :post do %>
  ♥<%= @post.favorites.count %>いいね
<% end %>
</p>
<% end %>




<p>コメント件数 : <%= @post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
<p><%= image_tag('no_image.jpg') %></p>
<%= post_comment.user.name %>さん
投稿日 : <%= post_comment.created_at.strftime('%Y%m%d') %><br>
コメント : <%= post_comment.comment %>
<% end %>

<%= form_with(model:[@post,@post_comment],local:true) do |f| %>
<%= f.text_area:comment,rows: '5',placeholder: "コメントをここに" %>
<%= f.submit "送信する", class: "btn btn-sm btn-primary" %>
<% end %>