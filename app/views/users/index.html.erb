<h1>ユーザー一覧</h1>
<div>
        <%= search_form_for @search, url: users_path do |f| %>
          <%= f.label :name_cont, '名前' %>
          <%= f.search_field :name_cont, placeholder: "ユーザー名を検索...", class: "form-control" %>
          <%= f.submit '検索', class: "btn btn-primary" %>
        <% end %>

<% @users.each do |user| %>
  <p>ユーザーネーム：<%= link_to user.name, user_path(user.id) -%>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
</div>

<td>フォロー数：<%= user.follower.count %></td>
<td>フォロワー数：<%= user.followed.count %></td>
 <% unless current_user == user %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", unfollow_path(user.id), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", follow_path(user.id), method: :POST, class: "btn btn-success" %>
        <% end %>
 <% end %>
<% end %>

<%= paginate @users %>