  <tr>
    <th>フォロワー</th>
    <th><%= link_to user.followed.count, user_users_follower_path(user.id) %></th>
  </tr>
  <tr>
    <th>いいねした投稿</th>
　  <th><%= link_to user.favorites.count, user_users_favorites_path(user.id) %></th>
